<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Inscreva-se!</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
          <%= form_for @user do |f| %>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.text_field :name, 
                    class: 'form-control', 
                    placeholder: 'Nome', 
                    required: true,
                    data: {
                      'validation-required-message': 'Por favor digite seu nome'
                    }
                  %>
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                  <%= f.text_field :last_name, 
                    class: 'form-control', 
                    placeholder: 'Sobrenome',
                    required: true,
                    data: {
                      'validation-required-message': 'Por favor digite seu sobrenome'
                    }
                  %>
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                  <%= f.text_field :email, 
                    class: 'form-control', 
                    placeholder: 'E-mail',
                    required: true,
                    data: {
                      'validation-required-message': 'Por favor digite seu e-mail'
                    } 
                  %>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.text_field :city, 
                    class: 'form-control', 
                    placeholder: 'Cidade',
                    required: true,
                    data: {
                      'validation-required-message': 'Por favor digite a cidade'
                    } 
                  %>
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                  <%= f.text_field :state, 
                    class: 'form-control', 
                    placeholder: 'Estado',
                    required: true,
                    data: {
                      'validation-required-message': 'Por favor digite o Estado'
                    } 
                  %>
                  <p class="help-block text-danger"></p>                      
                </div>
              </div>
              <div id="success"></div>
              <button type="submit" class="btn btn-xl">Cadastrar</button>
            </div>
          <% end %>
